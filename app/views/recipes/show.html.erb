<div>
    <h1> <%= @recipe[:title]%> </h1>
    <%= image_tag @recipe[:image_url] %>

    <ul>
        <% if @recipe[:tags] %>
            <%  @recipe[:tags].each do |tag| %>
                <li>
                    <%= tag %>
                </li>
            <% end %>
        <% end %>
    </ul>

    <h3> <%= markdown(@recipe[:description])%> </h3>

    <div>
        <h4>
            <b>Chef:</b>
            <% if @recipe[:chef] %>
                <%=  @recipe[:chef] %>
            <% end %>
        </h4>
    </div>
</div>